extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        .card.shadow-lg.p-4
          h2.text-center.mb-4.text-primary Create Your Account
          form#signupForm(method='POST' action='/signup')
            .mb-3
              label.form-label(for='fullName') Full Name
              input#fullName.form-control(type='text' name='fullname' placeholder='John Doe' required)
            .mb-3
              label.form-label(for='email') Email Address
              input#email.form-control(type='email' name='email' placeholder='you@example.com' required)
            .mb-3
              label.form-label(for='phone') Phone Number
              input#phone.form-control(type='tel' name='phone' placeholder='+1234567890') 
            .mb-3 
              label.form-label(for='role') Role
              select#role(name="role") 
                option(value="") Select role 
                option(value="farmer") Farmer 
                option(value="salesRep") Sales Representative 
                option(value="brooderManager") Brooder Manager
            .mb-3
              label.form-label(for='password') Password
              input#password.form-control(type='password' name='password' placeholder='Enter password')
            .mb-3
              label.form-label(for='confirmPassword') Confirm Password
              input#confirmPassword.form-control(type='password' name='confirmPassword' placeholder='Re-enter password' required)
            .form-check.mb-3
              input#terms.form-check-input(type='checkbox')
              label.form-check-label(for='terms')
                | I agree to the 
                a(href='/terms') Terms and Conditions
            button.btn.btn-primary.w-100(type='submit') Sign Up
          .text-center.mt-3
            | Already have an account? 
            a(href='/login') Log in
  link(rel='stylesheet' href='/styl/signup.css')
