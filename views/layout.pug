doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Young4Chicks

    // Bootstrap CSS
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr",
      crossorigin="anonymous"
    )

    // Optional: Padding for fixed-top navbar
    style.
      body {
        padding-top: 70px;
      }

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
      .container-fluid
        button.navbar-toggler(
          type="button",
          data-bs-toggle="collapse",
          data-bs-target="#navbarTogglerDemo03",
          aria-controls="navbarTogglerDemo03",
          aria-expanded="false",
          aria-label="Toggle navigation"
        )
          span.navbar-toggler-icon
        a.navbar-brand(href="/") Young4Chicks
        #navbarTogglerDemo03.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current="page" href="/") Home
            li.nav-item
              a.nav-link(href="/about") About Us
            li.nav-item
              a.nav-link(href="/about") Orders
          form.d-flex(role="search" method="GET" action="/search")
            input.form-control.me-2(type="search" name="q" placeholder="Search" aria-label="Search")
            button.btn.btn-outline-success(type="submit") Search

    // Main page content injected here
    block content

    // Bootstrap JS
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-+I3CEK9J33UcNRs1tQ9i1EvWiVzRoV+XehL2BujHwMUNZctflkJkFUEPmbsEbzzc",
      crossorigin="anonymous"
    )
