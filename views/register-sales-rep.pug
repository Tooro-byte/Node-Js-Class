extends layout 
block content
  header
    title Sales Representative Registration
    link(rel='stylesheet' href='/styl/sales.css')
  body
    h1 Welcome to the Sales Representative Page
    p
      | Please fill out the form below to register a new sales representative for
      |   Young4Chicks.
    form#salesRepRegistrationForm
      div
        label(for="fullName") Full Name:
        br
        input#fullName(
          required="" 
          placeholder="Jane Doe" 
          name="fullName" 
          type="text"
          )
        br
        br
      div
        label(for="repEmail") Email Address:
        br
        input#repEmail(
          required="" 
          placeholder="jane.doe@young4chicks.com" 
          name="repEmail" 
          type="email"
          )
        br
        br
      div
        label(for="repPhone") Telephone Number:
        br
        input#repPhone(
          required="" 
          placeholder="+1234567890" 
          name="repPhone" 
          type="tel"
          )
        br
        br
      div
        label(for="repAddress") Address:
        br
        textarea#repAddress(
          required="" 
          placeholder="456 Business Park, City, Country" 
          rows="3" 
          name="repAddress"
          )
        br
        br
      div
        label(for="employeeId") Employee ID:
        br
        input#employeeId(
          required="" 
          placeholder="YC-REP-001" 
          name="employeeId" 
          type="text"
          )
        br
        br
      div
        label(for="password") Password:
        br
        input#password(
          required="" 
          placeholder="Enter a strong password" 
          name="password" 
          type="password"
          )
        br
        br
      div
        label(for="confirmPassword") Confirm Password:
        br
        input#confirmPassword(
          required="" 
          placeholder="Re-enter password" 
          name="confirmPassword" 
          type="password"
          )
        br
        br
      div
        button(type="submit") Register Sales Representative
    #displaySalesReps.mt-6
    script(src="/vanila-js/sales.js")